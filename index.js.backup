const veri_schema = mongoose.model("veri_schema", mongoose.Schema({}, { strict: false }));



app.post('/veri-ekle', async (req, res) => {

    veri_schema.insertMany(req.body);

    res.send("newProduct");
});



app.post('/veri-getir', async (req, res) => {

    const veri = await veri_schema.find({plaka : req.body.plaka})

    res.send(veri);
});

app.get('/veri-getir', async (req, res) => {

    const veri = await veri_schema.find()

    res.send(veri);
});






